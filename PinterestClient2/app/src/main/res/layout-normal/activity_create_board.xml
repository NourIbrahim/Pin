<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CreateBoardActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:id="@+id/layout_all_board"
                android:gravity="center">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/view"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/all_board"
                    android:layout_marginTop="10dp"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:text="@string/all_board"/>

            </LinearLayout>




            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:id="@+id/layout_log_out"
                android:gravity="center">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/log"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/log_out"
                    android:layout_marginTop="10dp"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:text="@string/log_out"/>

            </LinearLayout>



        </RelativeLayout>

    </android.support.v7.widget.Toolbar>


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/logo"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Board Description"
        android:id="@+id/board_create_desc"
        android:gravity="center"

        android:layout_below="@+id/board_create_name"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="@android:color/white"
        android:background="@drawable/round_cournor_red"
        android:layout_marginTop="50dp"
        android:id="@+id/save_button"
        android:layout_below="@+id/board_create_desc"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text=""
        android:id="@+id/board_response_view"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/board_create_name"
        android:hint="Board Name"
        android:gravity="center"
        android:layout_below="@+id/logo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="97dp" />

</RelativeLayout>
